{#
  Styleguide Configuration
  ==============================
	The settings inherited by templates specific to the styleguide site.
#}

{# All values entered below should be contained within the `config` object and
referenced using the same name structure, E.G. `config.sections`. #}
{% macro config() %}
	{% set config = {
		sections: [
			{
				title: 'Colors'
			},
			{
				title: 'Typography'
			},
			{
				title: 'UI Elements',
				sub: [
					{
						title: 'Buttons',
						sub: [
							{
								title: 'Large Buttons'
							},
							{
								title: 'Small Buttons'
							}
						]
					},
					{
						title: 'Forms'
					}
				]
			}
		]
	} %}

	{# Do not modify. This outputs the object as a string of JSON data. #}
	{{ config | json_encode | raw }}
{% endmacro %}

{% macro breakpoints() %}
	{% set breakpoints = {
		Mobile: 400,
		Tablet: 768,
		'Small Desktop': 1024,
		'Large Desktop': 1280
	} %}

	{{ breakpoints | json_encode | raw }}
{% endmacro %}
