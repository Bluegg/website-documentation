		sections: [
			{
				title: 'Colors'
			},
			{
				title: 'Typography'
			},
			{
				title: 'UI Elements',
				sub: [
					{
						title: 'Buttons',
						sub: [
							{
								title: 'Large Buttons'
							},
							{
								title: 'Small Buttons'
							}
						]
					},
					{
						title: 'Forms'
					}
				]
			}
		],
		breakpoints: {
			Mobile: 400,
			Tablet: 768,
			'Small Desktop': 1024,
			'Large Desktop': 1280
		}
	} %}

