{#
	Style Guide Index
	==============================
	The web server's default page for the style guide site.
#}

{# Inherit the blocks and their content from the site layout. #}
{% extends websitedocumentation.getUrl() ~ '/_layouts/_style-guide' %}

{% block head %}
	{{ parent() }}
	{# Head content to be inherited by this template ONLY. The `parent` function
	inherits the content from the style guide layout's head block. #}
	{% do view.registerAssetBundle(global.bundles.styleGuide) %}
{% endblock %}

{% block body %}
	{{ parent() }}
	{# Body content to be inherited by this template ONLY. The `parent` function
	inherits the content from the style guide layout's body block. #}
	{% include global.url ~ '/style-guide/_organisms/_aside' %}
	{% include global.url ~ '/style-guide/_organisms/_main' %}
{% endblock %}
