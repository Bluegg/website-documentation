{% extends 'websitedocumentation/_layouts/settings' %}

{% import '_includes/forms' as forms %}

{% set title = 'General Settings' | t('websitedocumentation') %}

{% block content %}
	<input type="hidden" name="action" value="websitedocumentation/settings/save-general-settings">
    {{ redirectInput('websitedocumentation/settings') }}
    {{ csrfInput() }}

	<h2 class="first">{{ "General Settings"|t('websitedocumentation') }}</h2>

	{{ forms.elementSelectField({
    	label: "Logo",
    	id: "logo",
    	name: "logo",
    	viewMode: "list",
    	elementType: 'craft\\elements\\Asset',
    	selectionLabel: "Add Images",
    	required: false,
    	errors: settings.getErrors('logo'),
    	limit: 1,
    	elements: [logo],
    	criteria: { kind: 'image'}
	}) }}

	{{ forms.colorField({
    	label: "Brand Background Color",
    	id: "brandBgColor",
    	name: "brandBgColor",
		value: settings.brandBgColor | default,
	}) }}

	{{ forms.colorField({
    	label: "Brand Text Color",
    	id: "brandTextColor",
    	name: "brandTextColor",
		value: settings.brandTextColor | default,
	}) }}

	{{ forms.colorField({
    	label: "Accent Background Color",
    	id: "accentBgColor",
    	name: "accentBgColor",
		value: settings.accentBgColor | default,
	}) }}

	{{ forms.colorField({
    	label: "Active Text Color",
    	id: "accentTextColor",
    	name: "accentTextColor",
		value: settings.accentTextColor | default,
	}) }}


{% endblock %}
